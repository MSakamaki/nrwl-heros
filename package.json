{
  "name": "nrwl-sample",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --app=client --proxy-config proxy.conf.json",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format": "prettier --single-quote --print-width 120 --write \"{apps,libs}/**/*.ts\"",
    "dev.start": "npm run mock.start && npm run chrome.start",
    "mock.start": "./node_modules/.bin/pm2 start npm --name=\"mock\" -- run mock.start.dev",
    "mock.start.dev": "./node_modules/.bin/ts-node mock/mockAPI/index.ts",
    "mock.stop": "./node_modules/.bin/pm2 stop mock",
    "chrome.start": "rm -fr /tmp/nrwl-sample && ./node_modules/.bin/pm2 start /Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome --name=\"chrome\" --  --user-data-dir=/tmp/nrwl-sample --ignore-certificate-errors --unsafely-treat-insecure-origin-as-secure=https://localhost:5555",
    "chrome.stop": "./node_modules/.bin/pm2 stop chrome",
    "pm2.kill": "./node_modules/.bin/pm2 kill",
    "doc": "node_modules/.bin/compodoc -p  tsconfig.app.json --includesName --includes add-doc",
    "doc.serve": "node_modules/.bin/compodoc -s"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.0.0",
    "@angular/common": "5.0.0",
    "@angular/compiler": "5.0.0",
    "@angular/core": "5.0.0",
    "@angular/forms": "5.0.0",
    "@angular/http": "5.0.0",
    "@angular/platform-browser": "5.0.0",
    "@angular/platform-browser-dynamic": "5.0.0",
    "@angular/router": "5.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14",
    "@nrwl/nx": "0.2.1",
    "@ngrx/effects": "^4.1.0",
    "@ngrx/router-store": "^4.1.0",
    "@ngrx/store": "^4.1.0",
    "@ngrx/store-devtools": "4.0.0"
  },
  "devDependencies": {
    "@angular/cli": "nrwl/fix-cli-build",
    "@angular/compiler-cli": "5.0.0",
    "@angular/language-service": "5.0.0",
    "@compodoc/compodoc": "^1.0.4",
    "@nrwl/schematics": "0.2.1",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "browser-sync": "^2.18.13",
    "codelyzer": "~3.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "pm2": "^2.7.2",
    "prettier": "1.7.4",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "2.5.3"
  }
}
